  <%= form_for @user,  multiple: true do |f| %>
  <div class="field">
    <%= f.text_area :username, placeholder: "name" %>
  </div>
  <div class="field">
    <%= f.text_area :email, placeholder: "email" %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :avatar %>
  </span>
<% end %>
