<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.find_each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "description" %>
    <%= f.text_area :desc %>
  </div>
  <div class="field">
    <%= f.label :active %>
    <%= f.check_box :active %><br>
    Check the box if this project is or will be in use. (I.E. Not an archived project.)
  </div>
  <div class="field">
    <%= f.label "Visible" %>
    <%= f.check_box :visible %>
    Check the box if this project should be visible to other teachers and students. (I.E. Not a draft.)
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary"%>
  </div>
<% end %>
