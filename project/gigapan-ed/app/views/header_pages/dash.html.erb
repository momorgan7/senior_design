<h1>Dashboard:</h1>
<div class="main">
  <div class="row">
  <div class="col-md-3">  
  <%= image_tag current_user.avatar.url.to_s if current_user.avatar? %>
      <p><%= link_to 'Edit Profile', edit_user_path(current_user) %> </p>
      <% if !current_user.has_role?(:student)%>
      <p><%=link_to 'Create Project', new_project_path%></p>
      <p><%=link_to 'Create New Student', new_user_path%></p>
      <%end%>
  </div>
  <div class="col-md-9"> 
    <div class="topbar">
      <% if current_user.has_role?(:student) %>
      <h2> <%= current_user.first_name%> <%=current_user.last_name%> a student from place, location</h2>
      <%else%>
    <h2> <%= current_user.first_name%> <%=current_user.last_name%> from place, location</h2>
    <% if current_user.cont_area? %>
    <p>Content Area: <%= current_user.cont_area%></p>
    <%end%>
      <%end%>
  </div>
      <div class="projects">
        <h2>Current Projects</h2>
        <p>I'm a big long list of projects</p>
        <h2>Archived Projects</h2>
        <p>I'm a big long list of projects</p>
      </div>
      
  </div>
</div>
</div>
